{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Effect": "Allow",
        "Action": "iot:Connect",
        "Resource": "arn:aws:iot:us-east-1:227890699892:client/${iot:Connection.Thing.ThingName}"
      },
      {
        "Effect": "Allow",
        "Action": "iot:Subscribe",
        "Resource": [
          "arn:aws:iot:us-east-1:227890699892:topicfilter/thinedge/${iot:Connection.Thing.ThingName}/cmd/#",
          "arn:aws:iot:us-east-1:227890699892:topicfilter/$aws/things/${iot:Connection.Thing.ThingName}/shadow/#",
          "arn:aws:iot:us-east-1:227890699892:topicfilter/thinedge/devices/${iot:Connection.Thing.ThingName}/test-connection"
        ]
      },
      {
        "Effect": "Allow",
        "Action": "iot:Receive",
        "Resource": [
          "arn:aws:iot:us-east-1:227890699892:topic/thinedge/${iot:Connection.Thing.ThingName}/cmd",
          "arn:aws:iot:us-east-1:227890699892:topic/thinedge/${iot:Connection.Thing.ThingName}/cmd/*",
          "arn:aws:iot:us-east-1:227890699892:topic/$aws/things/${iot:Connection.Thing.ThingName}/shadow",
          "arn:aws:iot:us-east-1:227890699892:topic/$aws/things/${iot:Connection.Thing.ThingName}/shadow/*",
          "arn:aws:iot:us-east-1:227890699892:topic/thinedge/devices/${iot:Connection.Thing.ThingName}/test-connection"
        ]
      },
      {
        "Effect": "Allow",
        "Action": "iot:Publish",
        "Resource": [
          "arn:aws:iot:us-east-1:227890699892:topic/thinedge/${iot:Connection.Thing.ThingName}/td",
          "arn:aws:iot:us-east-1:227890699892:topic/thinedge/${iot:Connection.Thing.ThingName}/td/*",
          "arn:aws:iot:us-east-1:227890699892:topic/$aws/things/${iot:Connection.Thing.ThingName}/shadow",
          "arn:aws:iot:us-east-1:227890699892:topic/$aws/things/${iot:Connection.Thing.ThingName}/shadow/*",
          "arn:aws:iot:us-east-1:227890699892:topic/thinedge/devices/${iot:Connection.Thing.ThingName}/test-connection"
        ]
      }
    ]
  }
